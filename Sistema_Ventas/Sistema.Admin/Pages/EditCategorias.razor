@page "/categorias/editar/{CategoriaId}"
@page "/categorias/editar"

<main>
    <div class="container-fluid">
        <h1 class="mt-4">Categorias</h1>
        <ol class="breadcrumb mb-4">
            <li class="breadcrumb-item active">Admin / Categorias / Editar </li>
        </ol>

        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table mr-1"></i>
                Categorias
            </div>
            <div class="card-body">
                @if (!Saved)
                {
                    <EditForm Model="@Categoria" OnValidSubmit="@HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary />
                        <div class="form-group row">
                            <label for="nombre" class="col-sm-3">Nombre: </label>
                            <InputText id="nombre" class="form-control col-sm-8" @bind-Value="@Categoria.Nombre" placeholder="nombre"></InputText>
                            <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => Categoria.Nombre)" />
                        </div>
                        <div class="form-group row">
                            <label for="descripción" class="col-sm-3">Descripción: </label>
                            <InputText id="descripción" class="form-control col-sm-8" @bind-Value="@Categoria.Descripcion" placeholder="descripción"></InputText>
                            <ValidationMessage class="offset-sm-3 col-sm-8" For="@(() => Categoria.Descripcion)" />
                        </div>

                        <button type="submit" class="btn btn-primary edit-btn">Guardar</button>
                        <a class="btn btn-outline-primary edit-outline-btn" @onclick="@NavigateToInfo">Cancelar</a>

                        @if (Alert != null)
                        {
                            <ShowAlert Message="@Alert.Message" Type="@Alert.Type" />
                        }
                    </EditForm>
                }
                else
                {
                    <ShowAlert Message="@Alert.Message" Type="@Alert.Type" />
                    <a class="btn btn-outline-primary" @onclick="@NavigateToInfo">Regresar</a>
                }
            </div>
        </div>


    </div>
</main>