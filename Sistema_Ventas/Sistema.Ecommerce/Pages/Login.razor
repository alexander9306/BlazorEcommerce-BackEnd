@page "/login"

<main class="page login-page">
    <section class="clean-block clean-form dark">
        <div class="container">
            <div class="block-heading" style="padding-top: 44px;">
                <h2 class="text-info">Log In</h2>
                <p>Inicia sesión para poder finalizar tu compra</p>
            </div>

            <EditForm Model="Cliente" OnValidSubmit="HandleLogin">
                <DataAnnotationsValidator />
                <div class="form-group">
                    <label for="email">Email</label>
                    <InputText Class="form-control item" @bind-Value="Cliente.Email" type="email" Id="email" />
                    <ValidationMessage For="@(() => Cliente.Email)" />
                </div>
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <InputText Class="form-control" @bind-Value="Cliente.Password" type="password" Id="password" />
                    <ValidationMessage For="@(() => Cliente.Password)" />
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="checkbox">
                        <label class="form-check-label" for="checkbox">Recuerdame</label>
                    </div>
                </div>
                @if (ShowErrors)
                {
                    <div class="alert alert-danger" role="alert">
                        <p>@Error</p>
                    </div>
                }
                <button class="btn btn-primary btn-block" type="submit">Log In</button>
                <a class="btn btn-block btn-success" href="signup">Registrate</a>
            </EditForm>
        </div>
    </section>
</main>