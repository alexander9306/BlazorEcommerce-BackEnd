@page "/signup"
@using Sistema.Ecommerce.Components

<main class="page registration-page">
    <section class="clean-block clean-form dark">
        <div class="container">
            <div class="block-heading" style="padding-top: 44px;">
                <h2 class="text-info"><br>Registro<br></h2>
                <p>Registrate para obtener acceso a grandes ofertas</p>
            </div>
            <EditForm Model="Cliente" OnValidSubmit="HandleRegistration">
                <DataAnnotationsValidator />
                <div class="form-group">
                    <label for="email">Email</label>
                    <InputText Class="form-control item" type="email" Id="email" @bind-Value="Cliente.Email" />
                    <ValidationMessage For="@(() => Cliente.Email)" />
                </div>
                <div class="form-group">
                    <label for="password">Contraseña</label>
                    <InputText Class="form-control item" type="password" Id="password" @bind-Value="Cliente.Password" />
                    <ValidationMessage For="@(() => Cliente.Password)" />
                </div>
                <div class="form-group">
                    <label for="password-1">Repetir Contraseña</label>
                    <InputText Class="form-control item" type="password" Id="password-1" @bind-Value="Cliente.MatchPassword" />
                    <ValidationMessage For="@(() => Cliente.MatchPassword)" />
                </div>
                @if (Alert != null)
                {
                    <ShowAlert Message="@Alert.Message" Type="@Alert.Type"/>
                }
                <button class="btn btn-primary btn-block" type="submit">Sign Up</button>
            </EditForm>
        </div>
    </section>
</main>